{
  "format_version": 2,
  "min_clients": 4,
  "num_rounds": 120,

  "server": {
    "heart_beat_timeout": 600
  },

  "task_data_filters": [],
  "task_result_filters": [],

  "components": [
    {
      "id": "persistor",
      "name": "PTFileModelPersistor",
      "args": {
        "model": "model",
        "source_ckpt_file_full_name": null
      }
    },
    {
      "id": "model",
      "path": "models.mednext_base",
      "args": {
        "spatial_dims": 3,
        "in_channels": 1,
        "out_channels": 8,
        "kernel_size": 3,
        "deep_supervision": true,
        "use_grad_checkpoint": true
      }
    },
    {
      "id": "shareable_generator",
      "name": "PTFedOptModelShareableGenerator",
      "args": {
        "device": "cpu",
        "source_model": "model",
        "optimizer_args": {
          "path": "torch.optim.AdamW",
          "args": {
            "lr": 1e-3
          },
          "config_type": "dict"
        },
        "lr_scheduler_args": {
          "path": "torch.optim.lr_scheduler.CosineAnnealingLR",
          "args": {
            "T_max": "{num_rounds}",
            "eta_min": 0.9
          },
          "config_type": "dict"
        }
      }
    },
    {
      "id": "aggregator",
      "name": "InTimeAccumulateWeightedAggregator",
      "args": {
        "exclude_vars": null,
        "aggregation_weights": {
          "liver": 1.0,
          "spleen": 1.0,
          "pancreas": 1.0,
          "kidney": 1.0
        },
        "expected_data_kind": "WEIGHT_DIFF"
      }
    },
    {
      "id": "metric_logger",
      "path": "metric_logger.GlobalMetricLogger",
      "args": {
        "log_dir": "logs",
        "log_name": "fl_val_meandice",
        "aggregation_weights": {
          "liver": 2.0,
          "spleen": 1.0,
          "pancreas": 2.0,
          "kidney": 2.0
        }
      }
    },
    {
      "id": "model_selector",
      "name": "IntimeModelSelector",
      "args": {
        "weigh_by_local_iter": false,
        "aggregation_weights": {
          "liver": 2.0,
          "spleen": 1.0,
          "pancreas": 2.0,
          "kidney": 2.0
        }
      }
    },
    {
      "id": "model_locator",
      "path": "model_locator.SimpleModelLocator",
      "args": {}
    },
    {
      "id": "formatter",
      "path": "simple_formatter.SimpleFormatter",
      "args": {}
    },
    {
      "id": "report_generator",
      "path": "report_generator.ReportGenerator",
      "args": {}
    }
  ],

  "workflows": [
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": "{min_clients}",
        "num_rounds": "{num_rounds}",
        "start_round": 0,
        "wait_time_after_min_received": 10,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0,
        "task_check_period": 1
      }
    },
    {
      "id": "cross_site_model_eval",
      "name": "CrossSiteModelEval",
      "args": {
        "model_locator_id": "model_locator",
        "formatter_id": "formatter",
        "submit_model_timeout": 600,
        "validation_timeout": 6000,
        "cleanup_models": true
      }
    }
  ]
}
